@page "/registrar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>FinTracker - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center py-8">
                <img src="images/FinTracker_Logo.png" width="250" alt="FinTracker Logo" />
            </div>

            <EditForm Model="@Request" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
                <MudTextField 
                    T="string" Label="E-mail" HelperText="Campo Obrigatório" 
                    InputType="InputType.Email" @bind-Value="Request.Email" For="@(() => Request.Email)"/>

                <MudTextField T="string" Label="Senha" HelperText="Campo Obrigatório" 
                    InputType="InputType.Password" @bind-Value="Request.Password" For="@(() => Request.Password)" />

                <div class="d-flex mt-8">
                    @if(isBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Registrar</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login">Já tenho uma conta.</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>
